<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<configuration>

	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss} [%thread] %level %logger{0} - %msg \(%file:%line\)%n</pattern>
		</encoder>
	</appender>

	<logger name="jp.co.mimaze.lesson.exercise.web.example" level="DEBUG"/>
	<logger name="jp.co.mimaze.lesson.exercise.web" level="DEBUG"/>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>